{
  "name": "my-extension",
  "description": "A Vue.js web extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_title": "my-extension",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.bilibili.com/bangumi/play/ss*",
        "*://*.bilibili.com/bangumi/play/ep*",
        "*://*.bilibili.com/video/av*",
        "*://*.bilibili.com/video/bv*",
        "*://*.bilibili.com/video/BV*",
        "*://www.bilibili.com/watchlater/*",
        "*://www.bilibili.com/medialist/*",
        "*://www.bilibili.com/blackboard/*"
      ],
      "js": [
        "content-script/content-script.js"
      ],
      "css": [
        "content-script/content-script.css"
      ],
      "run_at": "document_start"
    }
  ],
  "commands": {
    "faster": {
      "suggested_key": {
        "default": "Ctrl+Shift+Up"
      },
      "description": "快0.1倍速"
    },
    "slower": {
      "suggested_key": {
        "default": "Ctrl+Shift+Down"
      },
      "description": "慢0.1倍速"
    },
    "speed0.5": {
      "suggested_key": {
        "default": "Ctrl+Shift+Left"
      },
      "description": "0.5倍速"
    },
    "speed1": {
      "suggested_key": {
        "default": "Ctrl+Shift+Right"
      },
      "description": "原速"
    }
  }
}
